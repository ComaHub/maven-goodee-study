<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.coma.study.product.ProductDAO">
	<resultMap type="ProductDTO" id="productResultMap">
		<id property="productNum" column="product_num" />
		<result property="productKindNum" column="product_kind_num" />
		<result property="productName" column="product_name" />
		<result property="productContent" column="product_content" />
		<result property="productDate" column="product_date" />
		<result property="productRate" column="product_rate" />
		
		<!-- 1:1 관계인 경우 -->
		<association property="productKindDTO" javaType="ProductKindDTO">
			<result property="productKindName" column="product_kind_name" />
		</association>
	</resultMap>

	<select id="selectProductList" resultType="ProductDTO">
		SELECT
				*
		FROM product
		ORDER BY product_num DESC
	</select>
	
	<select id="selectProductDetail" parameterType="Long" resultMap="productResultMap">
		SELECT
				*
		FROM product P
		INNER JOIN product_kind PK USING(product_kind_num)
		<where>
			P.product_num = #{productNum}
		</where>
	</select>
</mapper>